# Standard Deployment Workflow
# Direct deployment strategy for low-risk changes
# Fast, straightforward deployment with minimal overhead
#
# Use for:
# - Documentation updates
# - Minor bug fixes
# - Configuration changes
# - Non-critical feature updates
#
# This workflow is called by risk-based-deployment.yml when risk score is LOW

name: Standard Deployment

on:
  workflow_call:
    inputs:
      environment:
        description: 'Target environment'
        required: true
        type: string
      risk_score:
        description: 'Risk score from analysis'
        required: false
        type: string
    secrets:
      KUBECONFIG:
        required: true
      GITHUB_TOKEN:
        required: true
  
  workflow_dispatch:
    inputs:
      environment:
        description: 'Target environment'
        required: true
        type: choice
        options:
          - development
          - staging
          - production

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}
  PYTHON_VERSION: '3.11'

jobs:
  # ============================================================================
  # STAGE 1: Build & Push
  # ============================================================================
  
  build:
    name: üèóÔ∏è Build Container
    runs-on: ubuntu-latest
    outputs:
      image_tag: ${{ steps.meta.outputs.tags }}
      image_digest: ${{ steps.build.outputs.digest }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      
      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=sha
      
      - name: Build and push
        id: build
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # ============================================================================
  # STAGE 2: Deploy
  # ============================================================================
  
  deploy:
    name: üöÄ Deploy to ${{ inputs.environment }}
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: ${{ inputs.environment }}
      url: https://${{ inputs.environment }}.example.com
    
    steps:
      - name: Set up kubectl
        uses: azure/setup-kubectl@v3
      
      - name: Configure kubeconfig
        run: |
          mkdir -p ~/.kube
          echo "${{ secrets.KUBECONFIG }}" | base64 -d > ~/.kube/config
      
      - name: Deploy application
        run: |
          ENV="${{ inputs.environment }}"
          IMAGE="${{ needs.build.outputs.image_tag }}"
          
          # Update deployment
          kubectl set image deployment/app app=$IMAGE -n $ENV
          
          # Wait for rollout
          kubectl rollout status deployment/app -n $ENV --timeout=5m
          
          echo "‚úÖ Deployment complete"
      
      - name: Verify deployment
        run: |
          ENV="${{ inputs.environment }}"
          
          # Check pod health
          READY=$(kubectl get deployment/app -n $ENV -o jsonpath='{.status.readyReplicas}')
          DESIRED=$(kubectl get deployment/app -n $ENV -o jsonpath='{.spec.replicas}')
          
          if [ "$READY" != "$DESIRED" ]; then
            echo "‚ùå Deployment not healthy: $READY/$DESIRED"
            exit 1
          fi
          
          echo "‚úÖ Verified: $READY/$DESIRED pods ready"

  # ============================================================================
  # STAGE 3: Validation
  # ============================================================================
  
  validate:
    name: ‚úÖ Validation
    runs-on: ubuntu-latest
    needs: deploy
    
    steps:
      - name: Health check
        run: |
          ENV="${{ inputs.environment }}"
          URL="https://$ENV.example.com"
          
          HEALTH=$(curl -s -o /dev/null -w "%{http_code}" $URL/health)
          
          if [ "$HEALTH" != "200" ]; then
            echo "‚ùå Health check failed: HTTP $HEALTH"
            exit 1
          fi
          
          echo "‚úÖ Health check passed"
